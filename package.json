{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.ts*": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "release": "lerna publish",
    "build": "lerna run build --stream",
    "build:clean": "lerna run build:clean --stream",
    "build:sizecompare": "yarn workspace example-typescript build:clean && yarn workspace example-typescript build --env nohash",
    "prepare": "husky install && yarn lerna run build --ignore 'example-*'",
    "postinstall": "yarn prepare"
  },
  "devDependencies": {
    "@anansi/babel-preset": "^2.7.24",
    "@anansi/eslint-plugin": "^0.12.0",
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "babel-loader": "8.2.3",
    "babel-plugin-root-import": "^6.6.0",
    "conventional-changelog-anansi": "^0.2.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "12.3.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "resolutions": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "normalize-package-data": "3.0.3",
    "package-json": "^7.0.0",
    "normalize-url": "^6",
    "read-package-json": "3.0.1",
    "get-pkg-repo": "4.2.1",
    "@types/webpack": "^5.0.0",
    "immer": "^9.0.0",
    "webpack": "^5.68.0",
    "css-loader": "^6.0.0",
    "dotenv-webpack": "^6.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.2.1",
    "webpack-virtual-modules": "^0.4.2",
    "browserslist": "^4.16.6",
    "react-refresh": "^0.11.0"
  },
  "dependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "react": "18.0.0-rc.0",
    "react-dom": "18.0.0-rc.0"
  },
  "packageManager": "yarn@3.1.1"
}
