{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.ts*": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "husky install && yarn workspace \"@anansi/webpack-config\" run build",
    "changelog": "yarn lerna version",
    "release": "yarn workspaces foreach -tiv --no-private npm publish --access public --tolerate-republish",
    "build": "yarn workspaces foreach -tpi --no-private run build",
    "dev": "yarn workspaces foreach -tpi --no-private run dev",
    "build:types": "ttsc --build",
    "build:pkg": "yarn build:types && yarn workspaces foreach -t --no-private run build",
    "build:clean": "yarn workspaces foreach -tpi --no-private run build:clean",
    "build:sizecompare": "yarn workspace example-typescript build:clean && yarn workspace example-typescript build --env nohash",
    "prepack": "yarn build:pkg",
    "version": "yarn install && git add yarn.lock"
  },
  "devDependencies": {
    "@anansi/babel-preset": "^3.0.0",
    "@anansi/eslint-plugin": "^0.13.0",
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.2",
    "@commitlint/cli": "17.0.0",
    "@commitlint/config-conventional": "17.0.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-loader": "8.2.5",
    "babel-plugin-root-import": "^6.6.0",
    "conventional-changelog-anansi": "^0.2.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "8.16.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "husky": "^7.0.4",
    "lerna": "5.0.0",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "ttypescript": "^1.5.13",
    "typescript": "4.7.2",
    "webpack": "5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "4.9.0"
  },
  "resolutions": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "normalize-package-data": "4.0.0",
    "package-json": "^7.0.0",
    "normalize-url": "^6",
    "read-package-json": "5.0.1",
    "get-pkg-repo": "5.0.0",
    "@types/webpack": "^5.0.0",
    "immer": "^9.0.0",
    "webpack": "5.72.1",
    "css-loader": "^6.0.0",
    "dotenv-webpack": "^7.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.2.1",
    "webpack-virtual-modules": "^0.4.2",
    "browserslist": "^4.16.6",
    "react-refresh": "^0.13.0"
  },
  "dependencies": {
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.5",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "packageManager": "yarn@3.2.1"
}
