  "resolutions": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "normalize-package-data": "3.0.2",
    "package-json": "^7.0.0",
    "normalize-url": "^6",
    "read-package-json": "3.0.1",
    "get-pkg-repo": "4.1.2",
    "@types/webpack": "^5.0.0",
    "immer": "^8.0.1",
    "webpack": "^5.65.0",
