    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-essentials": "^6.4.15",
    "@storybook/addon-links": "^6.4.15",
    "@storybook/addons": "^6.4.17",
    "@storybook/builder-webpack5": "^6.4.15",
    "@storybook/manager-webpack5": "^6.4.15",
    "@storybook/react": "^6.4.16",
    "babel-loader": "8.2.3",
    "babel-plugin-root-import": "^6.6.0",
    "conventional-changelog-anansi": "^0.2.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
