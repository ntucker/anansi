{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.ts*": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "release": "lerna publish",
    "build": "lerna run build --stream",
    "dev": "lerna run dev --stream --ignore 'example-*'",
    "build:types": "ttsc --build",
    "build:pkg": "yarn build:types && yarn lerna run build --ignore 'example-*'",
    "build:clean": "lerna run build:clean --stream",
    "build:sizecompare": "yarn workspace example-typescript build:clean && yarn workspace example-typescript build --env nohash",
    "prepack": "yarn build:pkg"
  },
  "devDependencies": {
    "@anansi/babel-preset": "^2.7.24",
