{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/@storybook/**",
      "react",
      "react-dom"
    ]
  },
  "lint-staged": {
    "*.ts*": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "release": "lerna publish",
    "build": "lerna run build --stream"
  },
  "devDependencies": {
    "@anansi/eslint-plugin": "^0.9.15",
    "@babel/cli": "7.12.16",
    "@babel/core": "7.12.16",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-essentials": "^6.1.19",
    "@storybook/addon-links": "^6.1.19",
    "@storybook/addons": "^6.1.19",
    "@storybook/react": "^6.1.19",
    "babel-plugin-root-import": "^6.5.0",
    "conventional-changelog-anansi": "^0.2.0",
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "resolutions": {
    "@lerna/conventional-commits": "https://github.com/ntucker/lerna-conventional-commits.git",
    "immer": "^8.0.1"
  },
  "dependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
