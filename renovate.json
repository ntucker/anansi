{
  "extends": ["group:allNonMajor", "group:monorepos"],
  "assigneesFromCodeOwners": true,
  "commitMessagePrefix": "pkg: ",
  "commitMessageTopic": "`{{depName}}`",
  "dependencyDashboardApproval": true,
  "rangeStrategy": "auto",
  "ignoreDeps": [
    "whatwg-fetch",
    "react-error-overlay",
    "@ant-design/pro-layout",
    "@linaria/babel-preset",
    "@linaria/core",
    "@linaria/react",
    "@linaria/shaker",
    "@linaria/tags",
    "@linaria/utils",
    "@linaria/webpack5-loader"
  ],

  "timezone": "America/Chicago",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchPaths": ["packages/**"],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPaths": ["examples/**"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "rangeStrategy": "auto"
    },
    {
      "matchPackageNames": [
        "@babel/runtime",
        "@babel/runtime-corejs3",
        "core-js",
        "core-js-compat"
      ],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "extends": ["monorepo:react"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "react"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/webpack",
        "https://github.com/webpack-contrib",
        "https://github.com/callstack/linaria"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "webpack",
      "groupName": "webpack packages"
    },
    {
      "matchPackageNames": [
        "@anansi/webpack-config",
        "@pmmmwh/react-refresh-webpack-plugin",
        "sass",
        "node-sass",
        "sass-resources-loader",
        "postcss",
        "postcss-preset-env",
        "svgo-loader",
        "svgo",
        "@svgr/plugin-svgo",
        "@svgr/webpack"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "webpack",
      "groupName": "webpack packages"
    },
    {
      "matchPackageNames": [
        "svgo-loader",
        "svgo",
        "@svgr/plugin-svgo",
        "@svgr/webpack"
      ],
      "matchUpdateTypes": ["major"],
      "groupSlug": "svg",
      "groupName": "svg processors"
    },

    {
      "extends": ["monorepo:babel"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "babel",
      "groupName": "babel packages"
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/babel-preset",
        "core-js",
        "core-js-compat"
      ],
      "groupSlug": "babel",
      "groupName": "babel packages"
    },
    {
      "extends": ["packages:jsTest"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "JS test packages"
    },
    {
      "matchPackageNames": [
        "@anansi/jest-preset",
        "@types/jsdom",
        "jest-environment-jsdom",
        "babel-jest"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "JS test packages"
    },
    {
      "extends": ["packages:linters"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "linters",
      "groupName": "linting packages"
    },
    {
      "groupSlug": "linters",
      "groupName": "linting packages",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/eslint-plugin",
        "prettier",
        "eslint-plugin-prettier",
        "@typescript-eslint/eslint-plugin"
      ]
    },
    {
      "matchPackageNames": [
        "prettier",
        "gulp-prettier",
        "eslint-plugin-prettier"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "prettier"
    }
  ]
}
