{
  "extends": ["group:allNonMajor", "group:monorepos"],
  "assigneesFromCodeOwners": true,
  "commitMessagePrefix": "pkg: ",
  "commitMessageTopic": "`{{depName}}`",
  "dependencyDashboardApproval": true,
  "rangeStrategy": "auto",
  "ignoreDeps": ["whatwg-fetch", "react-error-overlay"],
  "timezone": "America/Chicago",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchPaths": [
        "packages/webpack-config-anansi",
        "packages/babel-preset-anansi",
        "packages/browserslist-config-anansi",
        "packages/cli",
        "packages/generator-js",
        "packages/jest-preset-anansi",
        "packages/ts-utils"
      ],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["@babel/runtime", "core-js", "core-js-compat"],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "extends": ["monorepo:react"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "react"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/webpack",
        "https://github.com/webpack-contrib",
        "https://github.com/callstack/linaria"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "webpack",
      "groupName": "webpack packages"
    },
    {
      "matchPackageNames": [
        "@anansi/webpack-config",
        "sass",
        "node-sass",
        "sass-resources-loader",
        "postcss",
        "postcss-preset-env",
        "svgo-loader",
        "@svgr/webpack"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "webpack",
      "groupName": "webpack packages"
    },
    {
      "extends": ["monorepo:babel"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "babel",
      "groupName": "babel packages"
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/babel-preset",
        "core-js",
        "core-js-compat"
      ],
      "groupSlug": "babel",
      "groupName": "babel packages"
    },
    {
      "extends": ["packages:jsTest"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "JS test packages"
    },
    {
      "matchPackageNames": [
        "@anansi/jest-preset",
        "@types/jsdom",
        "jest-environment-jsdom",
        "babel-jest"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "JS test packages"
    },
    {
      "extends": ["packages:linters"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "linters",
      "groupName": "linting packages"
    },
    {
      "groupSlug": "linters",
      "groupName": "linting packages",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/eslint-plugin",
        "prettier",
        "eslint-plugin-prettier",
        "@typescript-eslint/eslint-plugin"
      ]
    }
  ]
}
